- model_class = Sale
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:price_id)
      %th= model_class.human_attribute_name(:sale_category_id)
      %th= model_class.human_attribute_name(:display_order)
      %th= model_class.human_attribute_name(:thumbnail_url)
      %th= model_class.human_attribute_name(:preview1_url)
      %th= model_class.human_attribute_name(:preview2_url)
      %th= model_class.human_attribute_name(:preview3_url)
      %th= model_class.human_attribute_name(:preview4_url)
      %th= model_class.human_attribute_name(:preview5_url)
      %th= model_class.human_attribute_name(:visible)
      %th= model_class.human_attribute_name(:approval_at)
      %th= model_class.human_attribute_name(:is_new)
      %th= model_class.human_attribute_name(:area)
      %th= model_class.human_attribute_name(:optimum_plan)
      %th= model_class.human_attribute_name(:task_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @sales.each do |sale|
      %tr
        %td= link_to sale.id, sale_path(sale)
        %td= sale.name
        %td= sale.description
        %td= sale.price
        %td= sale.genre_id
        %td= sale.display_order
        %td= sale.thumbnail_url
        %td= sale.preview1_url
        %td= sale.preview2_url
        %td= sale.preview3_url
        %td= sale.preview4_url
        %td= sale.preview5_url
        %td= sale.visible
        %td= sale.approval_at
        %td= sale.is_new
        %td= sale.area
        %td= sale.optimum_plan
        %td= sale.task_id
        %td=l sale.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_path(sale), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), sale_path(sale), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_sale_path, :class => 'btn btn-primary'
