= form_for @genre, :html => { :class => 'form-horizontal' } do |f|
  - if @genre.errors.any?
    #error_explanation
      %h2= "#{pluralize(@genre.errors.count, 'error')} prohibited this product from being saved:"
      %ul
        - @genre.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :id_label, :class => 'control-label'
    .controls
      = f.text_field :id_label, :class => 'form-control'
  .form-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :pay_label, :class => 'control-label'
    .controls
      = f.text_field :pay_label, :class => 'form-control'
  .form-group
    = f.label :free_label, :class => 'control-label'
    .controls
      = f.text_field :free_label, :class => 'form-control'
  .form-group
    = f.label :extension, :class => 'control-label'
    .controls
      = f.text_field :extension, :class => 'form-control'
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), genres_path, :class => 'btn btn-default'
