= form_for @price, :html => { :class => 'form-horizontal' } do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, 'error')} prohibited this product from being saved:"
      %ul
        - @price.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'form-control'
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), prices_path, :class => 'btn btn-default'
