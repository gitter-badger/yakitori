= form_for @price, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'form-control'
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), prices_path, :class => 'btn btn-default'
