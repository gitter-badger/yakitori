- model_class = SaleCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @sale_category.name
%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @sale_category.label


= link_to t('.back', :default => t("helpers.links.back")), sale_categories_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_category_path(@sale_category), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), sale_category_path(@sale_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
