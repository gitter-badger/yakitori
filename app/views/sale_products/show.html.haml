- model_class = SaleProduct
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize



= link_to t('.back', :default => t("helpers.links.back")), sale_products_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_sale_product_path(@sale_product), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), sale_product_path(@sale_product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
