- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:version) + ':'
  %br
  = @product.version
%p
  %strong= model_class.human_attribute_name(:genre_id) + ':'
  %br
  = @product.genre_id
%p
  %strong= model_class.human_attribute_name(:thumbnail_name) + ':'
  %br
  = @product.thumbnail_name
%p
  %strong= model_class.human_attribute_name(:exported_name) + ':'
  %br
  = @product.exported_name
%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @product.category


= link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
